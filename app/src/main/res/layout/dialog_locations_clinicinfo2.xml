<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:grid="http://schemas.android.com/apk/res-auto"

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/dialogTitleClinicInfo"

        android:layout_width="fill_parent"
        android:layout_height="@dimen/dialog_bar"
        android:background="@color/colorPrimary">
        <ImageView
            android:id="@+id/buttonLocationsClinicInfoClose"
            android:src="@drawable/close_dialog_state_list_drawable"

            android:layout_width="@dimen/dialog_close"
            android:layout_height="@dimen/dialog_close"
            android:layout_gravity="center"
            android:gravity="end"/>
        <TextView
            android:id="@+id/locationsClinicInfoTitleText"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_gravity="center"

            android:text="@string/locations_clinchours_dialog_title"
            android:textColor="@color/white"
            android:textSize="@dimen/dialog_title"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/locationsClinicInfoBar"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_below="@+id/dialogTitleClinicInfo">
        <TextView
            android:id="@+id/locationsClinicInfoLocationText"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"

            android:text=""
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/dialog_subtitle"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/locationsPic"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_below="@+id/locationsClinicInfoBar"

        android:background="@color/white"/>
    <ScrollView
        android:requiresFadingEdge="vertical"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/locationsPic"

        android:background="@color/white">
        <LinearLayout
            android:orientation="vertical"

            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"

                android:text="@string/location_hours_monday"
                android:textStyle="bold"
                android:textSize="@dimen/dialog_content"
                android:textColor="#000000"/>
            <TextView
                android:layout_gravity="center"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"

                android:text="8:00 a.m. - 5:00 p.m."
                android:textSize="@dimen/dialog_content"
                android:textColor="#000000"/>
