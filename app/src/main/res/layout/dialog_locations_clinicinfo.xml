<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/locations_clinicinfoDialogTitleContainer"

        android:layout_width="fill_parent"
        android:layout_height="@dimen/dialog_bar"
        android:background="@color/colorPrimary">
        <ImageView
            android:id="@+id/locations_clinicinfoDialogClose"
            android:src="@drawable/close_dialog_state_list_drawable"

            android:layout_width="@dimen/dialog_close"
            android:layout_height="@dimen/dialog_close"
            android:layout_gravity="center"
            android:gravity="end"/>
        <TextView
            android:id="@+id/locations_clinicinfoDialogTitle"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_gravity="center"

            android:text="@string/locations_clinchours_dialog_title"
            android:textColor="@color/white"
            android:textSize="@dimen/dialog_title"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/locations_clinicinfoDialogSubTitleContainer"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_below="@+id/locations_clinicinfoDialogTitleContainer">
        <TextView
            android:id="@+id/locations_clinicinfoDialogSubTitle"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"

            android:text=""
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/dialog_subtitle"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/locationsPic"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@color/white"

        android:layout_below="@+id/locations_clinicinfoDialogSubTitleContainer"/>
    <ScrollView
        android:id="@+id/locationsClinicInfoScroll"
        android:requiresFadingEdge="vertical"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/locationsPic"

        android:background="@color/white">
        <LinearLayout
            android:orientation="vertical"

            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/locationsClinicInfoContactUsTitle"

                android:layout_gravity="center"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="@string/location_clinicinfo_contactus"
                android:textSize="@dimen/dialog_title"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/locationsClinicInfoAddress1"

                android:layout_gravity="center"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text=" "
                android:textSize="@dimen/dialog_content"
                android:textColor="#000000"/>
            <TextView
                android:id="@+id/locationsClinicInfoAddress2"

                android:layout_gravity="center"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


                android:text=""
                android:textSize="@dimen/dialog_content"
                android:textColor="#000000"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"

                    android:layout_gravity="left"

                    android:src="@drawable/icon_phone"/>
                <TextView
                    android:id="@+id/locationsClinicInfoPhone"

                    android:layout_gravity="right"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"

                    android:text=" "
                    android:textSize="@dimen/dialog_content"
                    android:textColor="#000000"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/locations_clinicinfoFaxSection"

                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                android:layout_gravity="center">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"

                    android:layout_gravity="left"

                    android:src="@drawable/icon_fax"/>
                <TextView
                    android:id="@+id/locationsClinicInfoFax"

                    android:layout_gravity="right"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"

                    android:text=" "
                    android:textSize="@dimen/dialog_content"
                    android:textColor="#000000"/>
            </LinearLayout>
            <TextView
                android:id="@+id/locationsClinicInfoHoursTitle"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:text="@string/location_clinicinfo_hours"
                android:textStyle="bold"
                android:textSize="@dimen/dialog_title"
                android:textColor="@color/colorPrimary"/>
            <LinearLayout
                android:id="@+id/locationsClinicInfoHours"
                android:orientation="vertical"

                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>