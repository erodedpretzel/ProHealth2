<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:grid="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">
        <ImageView
            android:id="@+id/buttonTrackerCallClose"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="end"
            android:src="@drawable/close_dialog_state_list_drawable"
            />
        <TextView
            android:id="@+id/trackerTitleText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:text="@string/trackerDescription"
            android:textSize="20sp"
            />
    </LinearLayout>
    <android.support.v7.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        grid:columnCount="2"
        grid:rowCount="10"
        grid:orientation="horizontal"
        grid:alignmentMode="alignBounds"
        android:layout_marginTop="50dp"
        android:id="@+id/homeGrid">


        <TextView
            android:id="@+id/trackerDateText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" "
            android:textSize="@dimen/call_location"
            android:textColor="#000000"
            android:textStyle="bold"


            grid:layout_columnWeight="1"
            grid:layout_rowWeight="1"
            grid:layout_gravity="left"
            android:gravity="center"
            grid:layout_row="0"
            grid:layout_column="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="@string/trackerLocationText"
            android:textColor="#000000"
            android:textSize="@dimen/call_location"
            android:textStyle="bold"

            grid:layout_columnWeight="1"
            grid:layout_rowWeight="1"
            grid:layout_gravity="left|center"
            grid:layout_row="1"
            grid:layout_column="0" />

        <TextView
            android:id="@+id/trackerLocationText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" "
            android:textSize="@dimen/trackerFillText"
            android:textColor="#000000"

            grid:layout_columnWeight="1"
            grid:layout_rowWeight="1"
            grid:layout_gravity="left|top"
            grid:layout_row="2"
            grid:layout_column="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/trackerTimes"
            android:textColor="#000000"
            android:textSize="@dimen/call_location"
            android:textStyle="bold"
            grid:layout_columnWeight="1"
            grid:layout_rowWeight="1"
            grid:layout_gravity="left|center"
            grid:layout_row="3"
            grid:layout_column="0" />


        <TextView
            android:id="@+id/trackerTimesText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" "
            android:textSize="@dimen/trackerFillText"
            android:textColor="#000000"

            grid:layout_columnWeight="1"
            grid:layout_rowWeight="1"
            grid:layout_gravity="left|top"
            grid:layout_row="4"
            grid:layout_column="1" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/trackerStatus"
            android:textColor="#000000"
            android:textSize="@dimen/call_location"
            android:textStyle="bold"
            grid:layout_columnWeight="1"
            grid:layout_rowWeight="1"
            grid:layout_gravity="left|center"
            grid:layout_row="5"
            grid:layout_column="0" />
        <TextView
            android:id="@+id/trackerStatusText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" "
            android:textSize="@dimen/trackerFillText"
            android:textColor="#000000"

            grid:layout_columnWeight="1"
            grid:layout_rowWeight="1"
            grid:layout_gravity="left|top"
            grid:layout_row="6"
            grid:layout_column="1" />


        <ImageView
            android:id="@+id/buttonTrackerScheduleDownload"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="@string/call_location_terre"
            android:textColor="#000000"
            android:textSize="@dimen/call_location"
            grid:layout_columnWeight="1"
            grid:layout_rowWeight="1"
            grid:layout_gravity="left"
            android:src="@drawable/download_button"
            grid:layout_row="7"
            grid:layout_column="0" />

        <ImageView
            android:id="@+id/buttonTrackerRefresh"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="@string/call_location_terre"
            android:textColor="#000000"
            android:textSize="@dimen/call_location"
            grid:layout_columnWeight="1"
            grid:layout_rowWeight="1"
            grid:layout_gravity="left"
            android:src="@drawable/update_button"
            grid:layout_row="8"
            grid:layout_column="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/trackerScheduleDownload"
            android:textSize="@dimen/trackerContextText"
            android:textColor="#000000"

            grid:layout_columnWeight="1"
            grid:layout_rowWeight="1"
            grid:layout_gravity="center"
            grid:layout_row="7"
            grid:layout_column="1" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tracker_refresh"
            android:textSize="@dimen/trackerContextText"
            android:textColor="#000000"

            grid:layout_columnWeight="1"
            grid:layout_rowWeight="1"
            grid:layout_gravity="center"
            grid:layout_row="8"
            grid:layout_column="1" />

    </android.support.v7.widget.GridLayout>
</RelativeLayout>