<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:grid="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    grid:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main"
    tools:context="vpchc.prohealth.MainActivity"
    android:id="@+id/homeLayout">

    <android.support.v7.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        grid:columnCount="3"
        grid:rowCount="6"
        grid:orientation="horizontal"
        android:id="@+id/homeGrid"
        android:layout_marginTop="70dp"
        android:layout_above="@+id/linearLayout"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/callButton"
            android:layout_width="@dimen/icon_width"
            android:layout_height="@dimen/icon_height"
            grid:layout_columnWeight="1"
            grid:layout_rowWeight="1"
            grid:layout_gravity="center"
            android:src="@drawable/call_state_list_drawable"
            />
        <ImageView
            android:id="@+id/providerButton"
            android:layout_width="@dimen/icon_width"
            android:layout_height="@dimen/icon_height"
            grid:layout_columnWeight="1"
            grid:layout_rowWeight="1"
            grid:layout_gravity="center"
            android:src="@drawable/providers_state_list_drawable"
            />
        <ImageView
            android:id="@+id/locationsButton"
            android:layout_width="@dimen/icon_width"
            android:layout_height="@dimen/icon_height"
            grid:layout_columnWeight="1"
            grid:layout_rowWeight="1"
            grid:layout_gravity="center"
            android:src="@drawable/locations_state_list_drawable"
            />
        <TextView
            android:id="@+id/callButtonText"
            android:text="@string/icon_contact_us"
            android:textColor='#000000'
            android:textSize="@dimen/home_icon"
            grid:layout_columnWeight="1"
            grid:layout_rowWeight="1"
            grid:layout_gravity="top"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/providersButtonText"
            android:text="@string/icon_providers"
            android:textColor='#000000'
            android:textSize="@dimen/home_icon"
            grid:layout_columnWeight="1"
            grid:layout_rowWeight="1"
            grid:layout_gravity="top"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/locationsButtonText"
            android:text="@string/icon_locations"
            android:textColor='#000000'
            android:textSize="@dimen/home_icon"
            grid:layout_columnWeight="1"
            grid:layout_rowWeight="1"
            grid:layout_gravity="top"
            android:gravity="center"
            />
        <ImageView
            android:id="@+id/formsButton"
            android:layout_width="@dimen/icon_width"
            android:layout_height="@dimen/icon_height"
            grid:layout_columnWeight="1"
            grid:layout_rowWeight="1"
            grid:layout_gravity="center"
            android:src="@drawable/forms_state_list_drawable"
            />
        <ImageView
            android:id="@+id/servicesButton"
            android:layout_width="@dimen/icon_width"
            android:layout_height="@dimen/icon_height"
            grid:layout_columnWeight="1"
            grid:layout_rowWeight="1"
            grid:layout_gravity="center"
            android:src="@drawable/services_state_list_drawable"
        />
        <ImageView
            android:id="@+id/trackerButton"
            android:layout_width="@dimen/icon_width"
            android:layout_height="@dimen/icon_height"
            grid:layout_columnWeight="1"
            grid:layout_rowWeight="1"
            grid:layout_gravity="center"
            android:src="@drawable/tracker_state_list_drawable"
            />
        <TextView
            android:id="@+id/formsButtonText"
            android:text="@string/icon_forms"
            android:textColor='#000000'
            android:textSize="@dimen/home_icon"
            grid:layout_columnWeight="1"
            grid:layout_rowWeight="1"
            grid:layout_gravity="top"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/servicesButtonText"
            android:text="@string/icon_services"
            android:textColor='#000000'
            android:textSize="@dimen/home_icon"
            grid:layout_columnWeight="1"
            grid:layout_rowWeight="1"
            grid:layout_gravity="top"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/trackerButtonText"
            android:text="@string/icon_bustracker"
            android:textColor='#000000'
            android:textSize="@dimen/home_icon"
            grid:layout_columnWeight="1"
            grid:layout_rowWeight="1"
            grid:layout_gravity="top"
            android:gravity="center"
            />
        <ImageView
            android:id="@+id/portalButton"
            android:layout_width="@dimen/icon_width"
            android:layout_height="@dimen/icon_height"
            grid:layout_columnWeight="1"
            grid:layout_rowWeight="1"
            grid:layout_gravity="center"
            android:src="@drawable/portal_state_list_drawable"
            />
        <ImageView
            android:id="@+id/facebookButton"
            android:layout_width="@dimen/icon_width"
            android:layout_height="@dimen/icon_height"
            grid:layout_columnWeight="1"
            grid:layout_rowWeight="1"
            grid:layout_gravity="center"
            android:src="@drawable/facebook_state_list_drawable"
            />
        <ImageView
            android:id="@+id/websiteButton"
            android:layout_width="@dimen/icon_width"
            android:layout_height="@dimen/icon_height"
            grid:layout_columnWeight="1"
            grid:layout_rowWeight="1"
            grid:layout_gravity="center"
            android:src="@drawable/website_state_list_drawable"
            />
        <TextView
            android:id="@+id/portalButtonText"
            android:text="@string/icon_patient_portal"
            android:textColor='#000000'
            android:textSize="@dimen/home_icon"
            grid:layout_columnWeight="1"
            grid:layout_rowWeight="1"
            grid:layout_gravity="top"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/jobsButtonText"
            android:text="@string/icon_facebook"
            android:textColor='#000000'
            android:textSize="@dimen/home_icon"
            grid:layout_columnWeight="1"
            grid:layout_rowWeight="1"
            grid:layout_gravity="top"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/websiteButtonText"
            android:text="@string/icon_website"
            android:textColor='#000000'
            android:textSize="@dimen/home_icon"
            grid:layout_columnWeight="1"
            grid:layout_rowWeight="1"
            grid:layout_gravity="top"
            android:gravity="center"
            />
    </android.support.v7.widget.GridLayout>
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        style="@style/twitterFeed">
        <ImageView
            android:id="@+id/twitterBird"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/twitter_bird"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom">
            <TextView
                android:id="@+id/twitterFeed"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:scrollHorizontally="true"
                android:text="@string/main_twitter_feed_initial_tweet"
                android:textColor="#70B244"
                android:textSize="18sp"
            />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>


