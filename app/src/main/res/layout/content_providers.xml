<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"

    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ProvidersActivity"
    tools:showIn="@layout/activity_providers"

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/content_spacing_top_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/title_bar">

    <Spinner
        android:id="@+id/spinnerProviderLocations"
        style="@style/fancySpinnerDropDown"

        android:layout_width="match_parent"
        android:layout_height="@dimen/spinner_height"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>
    <Spinner
        android:id="@+id/spinnerProviderType"
        style="@style/fancySpinnerDropDown"

        android:layout_width="match_parent"
        android:layout_height="@dimen/spinner_height"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>
