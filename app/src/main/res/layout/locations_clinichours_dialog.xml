<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:grid="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">
        <ImageView
            android:id="@+id/buttonLocationsClinicHoursClose"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="end"
            android:src="@drawable/dialog_close"
            />
        <TextView
            android:id="@+id/locationsClinicHoursTitleText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="Clinic Hours"
            android:textColor="@color/white"
            android:textSize="18sp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="50dp">
        <TextView
            android:id="@+id/locationsClinicHoursLocationText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text=""
            android:textColor="@color/colorPrimary"
            android:textSize="20sp"
            />
    </LinearLayout>
    <android.support.v7.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        grid:columnCount="1"
        grid:rowCount="10"
        grid:orientation="horizontal"
        grid:alignmentMode="alignBounds"
        android:layout_marginTop="73dp"
        android:id="@+id/homeGrid">

        <TextView
            android:id="@+id/locationsClinicHoursText1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Monday:"
            android:textSize="15sp"
            android:textColor="#000000"

            grid:layout_columnWeight="1"
            grid:layout_rowWeight="1"
            grid:layout_gravity="left"
            />
        <TextView
            android:id="@+id/locationsClinicHoursText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" "
            android:textSize="15sp"
            android:textColor="#000000"

            grid:layout_columnWeight="1"
            grid:layout_rowWeight="1"
            grid:layout_gravity="center"
            />
        <TextView
            android:id="@+id/locationsClinicHoursText3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tuesday:"
            android:textSize="15sp"
            android:textColor="#000000"

            grid:layout_columnWeight="1"
            grid:layout_rowWeight="1"
            grid:layout_gravity="left"
            />
        <TextView
            android:id="@+id/locationsClinicHoursText4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" "
            android:textSize="15sp"
            android:textColor="#000000"

            grid:layout_columnWeight="1"
            grid:layout_rowWeight="1"
            grid:layout_gravity="center"
            />
        <TextView
            android:id="@+id/locationsClinicHoursText5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wednesday:"
            android:textSize="15sp"
            android:textColor="#000000"

            grid:layout_columnWeight="1"
            grid:layout_rowWeight="1"
            grid:layout_gravity="left"
            />
        <TextView
            android:id="@+id/locationsClinicHoursText6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" "
            android:textSize="15sp"
            android:textColor="#000000"

            grid:layout_columnWeight="1"
            grid:layout_rowWeight="1"
            grid:layout_gravity="center"
            />
        <TextView
            android:id="@+id/locationsClinicHoursText7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thursday:"
            android:textSize="15sp"
            android:textColor="#000000"

            grid:layout_columnWeight="1"
            grid:layout_rowWeight="1"
            grid:layout_gravity="left"
            />
        <TextView
            android:id="@+id/locationsClinicHoursText8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" "
            android:textSize="15sp"
            android:textColor="#000000"

            grid:layout_columnWeight="1"
            grid:layout_rowWeight="1"
            grid:layout_gravity="center"
            />
        <TextView
            android:id="@+id/locationsClinicHoursText9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Friday:"
            android:textSize="15sp"
            android:textColor="#000000"

            grid:layout_columnWeight="1"
            grid:layout_rowWeight="1"
            grid:layout_gravity="left"
            />
        <TextView
            android:id="@+id/locationsClinicHoursText10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" "
            android:textSize="15sp"
            android:textColor="#000000"

            grid:layout_columnWeight="1"
            grid:layout_rowWeight="1"
            grid:layout_gravity="center"
            />

    </android.support.v7.widget.GridLayout>

</RelativeLayout>