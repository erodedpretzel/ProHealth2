<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/locations_clinicinfo1DialogTitleContainer"

        android:layout_width="fill_parent"
        android:layout_height="@dimen/dialog_bar"
        android:background="@color/colorPrimary">
        <ImageView
            android:id="@+id/locations_clinicinfo1DialogClose"
            android:src="@drawable/close_dialog_state_list_drawable"

            android:layout_width="@dimen/dialog_close"
            android:layout_height="@dimen/dialog_close"
            android:layout_gravity="center"
            android:gravity="end"/>
        <TextView
            android:id="@+id/locations_clinicinfo1DialogTitle"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_gravity="center"

            android:text="@string/locations_clinchours_dialog_title"
            android:textColor="@color/white"
            android:textSize="@dimen/dialog_title"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/locations_clinicinfo1DialogSubTitleContainer"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_below="@+id/locations_clinicinfo1DialogTitleContainer">
        <TextView
            android:id="@+id/locations_clinicinfo1DialogSubTitle"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"

            android:text=""
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/dialog_subtitle"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/locationsPic"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@color/white"

        android:layout_below="@+id/locations_clinicinfo1DialogSubTitleContainer"/>
    <ScrollView
        android:requiresFadingEdge="vertical"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/locationsPic"

        android:background="@color/white">
        <LinearLayout
            android:orientation="vertical"

            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/locationsClinicInfoAddress1"

                android:layout_gravity="center"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text=""
                android:textSize="@dimen/dialog_content"
                android:textColor="#000000"/>
            <TextView
                android:id="@+id/locationsClinicInfoAddress2"

                android:layout_gravity="center"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"

                android:text=" "
                android:textSize="@dimen/dialog_content"
                android:textColor="#000000"/>
            <TextView
                android:id="@+id/locationsClinicInfoPhone"

                android:layout_gravity="center"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"

                android:text=""
                android:textSize="@dimen/dialog_content"
                android:textColor="#000000"/>
            <TextView
                android:id="@+id/locationsClinicInfoFax"

                android:layout_gravity="center"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"

                android:text=" "
                android:textSize="@dimen/dialog_content"
                android:textColor="#000000"/>
            <TextView
                android:id="@+id/locationsClinicInfoText1"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"

                android:text="@string/location_hours_monday"
                android:textStyle="bold"
                android:textSize="@dimen/dialog_content"
                android:textColor="#000000"/>
            <TextView
                android:id="@+id/locationsClinicInfoHours0"

                android:layout_gravity="center"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"

                android:text=" "
                android:textSize="@dimen/dialog_content"
                android:textColor="#000000"/>
            <TextView
                android:id="@+id/locationsClinicInfoText2"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"

                android:text="@string/location_hours_tuesday"
                android:textStyle="bold"
                android:textSize="@dimen/dialog_content"
                android:textColor="#000000"/>
            <TextView
                android:id="@+id/locationsClinicInfoHours1"

                android:layout_gravity="center"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"

                android:text=" "
                android:textSize="@dimen/dialog_content"
                android:textColor="#000000"/>
            <TextView
                android:id="@+id/locationsClinicInfoText3"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"

                android:text="@string/location_hours_wednesday"
                android:textStyle="bold"
                android:textSize="@dimen/dialog_content"
                android:textColor="#000000"/>
            <TextView
                android:id="@+id/locationsClinicInfoHours2"

                android:layout_gravity="center"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"

                android:text=" "
                android:textSize="@dimen/dialog_content"
                android:textColor="#000000"/>
            <TextView
                android:id="@+id/locationsClinicInfoText4"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"

                android:text="@string/location_hours_thursday"
                android:textStyle="bold"
                android:textSize="@dimen/dialog_content"
                android:textColor="#000000"/>
            <TextView
                android:id="@+id/locationsClinicInfoHours3"

                android:layout_gravity="center"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"

                android:text=" "
                android:textSize="@dimen/dialog_content"
                android:textColor="#000000"/>
            <TextView
                android:id="@+id/locationsClinicInfoText5"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"

                android:text="@string/location_hours_friday"
                android:textStyle="bold"
                android:textSize="@dimen/dialog_content"
                android:textColor="#000000"/>
            <TextView
                android:id="@+id/locationsClinicInfoHours4"

                android:layout_gravity="center"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"

                android:text=" "
                android:textSize="@dimen/dialog_content"
                android:textColor="#000000"/>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>