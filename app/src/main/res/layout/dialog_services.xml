<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/servicesDialogTitleContainer"

        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog_bar"
        android:background="@color/colorPrimary"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <ImageView
            android:id="@+id/servicesDialogClose"
            android:src="@drawable/close_dialog_state_list_drawable"

            android:layout_width="@dimen/dialog_close"
            android:layout_height="@dimen/dialog_close"
            android:layout_gravity="center"
            android:gravity="end"/>
        <TextView
            android:id="@+id/servicesDialogTitle"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"

            android:text=" "
            android:textColor="@color/white"
            android:textSize="@dimen/dialog_title"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/servicesDialogSubTitleContainer"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/servicesDialogTitleContainer"
        android:background="@color/white">
        <TextView
            android:id="@+id/servicesDialogSubTitle"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"

            android:text=""
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/dialog_subtitle"
            />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/servicesDialogSubTitleContainer"
        android:background="@color/white">
        <LinearLayout
            android:id="@+id/servicesContent"
            android:orientation="vertical"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>
    </ScrollView>
</RelativeLayout>