<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/dialogTitleContactInfo"

        android:layout_width="fill_parent"
        android:layout_height="@dimen/dialog_bar"
        android:background="@color/colorPrimary">
        <ImageView
            android:id="@+id/buttonLocationsContactInfoClose"
            android:src="@drawable/close_dialog_state_list_drawable"

            android:layout_width="@dimen/dialog_close"
            android:layout_height="@dimen/dialog_close"
            android:layout_gravity="center"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/locationsContactInfoTitleText"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"

            android:text="@string/locations_contactinfo_dialog_title"
            android:textColor="@color/white"
            android:textSize="@dimen/dialog_title"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/dialogSubTitleContactInfo"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialogTitleContactInfo"
        android:background="@color/white">
        <TextView
            android:id="@+id/locationsContactInfoLocationText"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"

            android:text=" "
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/dialog_subtitle"
            />
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/dialogSubTitleContactInfo"
        android:layout_marginTop="@dimen/content_spacing_top_margin">
        <LinearLayout
            android:orientation="vertical"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
            <ImageView
                android:id="@+id/locationsContactInfoPic"

                android:layout_width="@dimen/contact_pic_width"
                android:layout_height="@dimen/contact_pic_height"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/locationsContactInfoText1"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/content_spacing_top_margin"

                android:text="@string/locations_contactinfo_address"
                android:textStyle="bold"
                android:textSize="@dimen/dialog_content"
                android:textColor="#000000"/>
            <TextView
                android:id="@+id/locationsContactInfoText2"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:text=" "
                android:textSize="@dimen/dialog_content"
                android:textColor="#000000"/>
            <TextView
                android:id="@+id/locationsContactInfoText3"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:text=" "
                android:textSize="@dimen/dialog_content"
                android:textColor="#000000"/>
            <TextView
                android:id="@+id/locationsContactInfoText4"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"

                android:text="@string/locations_contactinfo_phone"
                android:textStyle="bold"
                android:textSize="@dimen/dialog_content"
                android:textColor="#000000"/>
            <TextView
                android:id="@+id/locationsContactInfoText5"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:text=" "
                android:textSize="@dimen/dialog_content"
                android:textColor="#000000"/>
            <TextView
                android:id="@+id/locationsContactInfoText6"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"

                android:text="@string/locations_contactinfo_fax"
                android:textStyle="bold"
                android:textSize="@dimen/dialog_content"
                android:textColor="#000000"/>
            <TextView
                android:id="@+id/locationsContactInfoText7"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:text=" "
                android:textSize="@dimen/dialog_content"
                android:textColor="#000000"/>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>