<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:grid="http://schemas.android.com/apk/res-auto"

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:id="@+id/dialogTitleTracker"

        android:layout_width="fill_parent"
        android:layout_height="@dimen/dialog_bar"
        android:background="@color/colorPrimary">
        <ImageView
            android:id="@+id/buttonTrackerCallClose"
            android:src="@drawable/close_dialog_state_list_drawable"

            android:layout_width="@dimen/dialog_close"
            android:layout_height="@dimen/dialog_close"
            android:layout_gravity="center"
            android:gravity="end"/>
        <TextView
            android:id="@+id/trackerTitleText"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"

            android:text="@string/trackerDescription"
            android:textColor="@color/white"
            android:textSize="@dimen/dialog_title"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/dialogSubTitleTracker"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialogTitleTracker"
        android:background="@color/white">
        <TextView
            android:id="@+id/trackerDateText"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"

            android:text=""
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/dialog_subtitle"
            />
    </LinearLayout>
    <LinearLayout
        android:weightSum="2"
        android:orientation="vertical"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/dialogSubTitleTracker">
    <LinearLayout
        android:id="@+id/trackerData"
        android:weightSum="1"
        android:layout_weight="1"
        android:orientation="vertical"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="@dimen/tracker_top_margin">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".16666666666"

            android:text="@string/trackerLocationText"
            android:textColor="#000000"
            android:textSize="@dimen/dialog_content"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/trackerLocationText"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight=".16666666666"

            android:text=" "
            android:textSize="@dimen/dialog_content"
            android:textColor="#000000"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".16666666666"

            android:text="@string/trackerTimes"
            android:textColor="#000000"
            android:textSize="@dimen/dialog_content"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/trackerTimesText"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight=".16666666666"

            android:text=" "
            android:textSize="@dimen/dialog_content"
            android:textColor="#000000"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".16666666666"

            android:text="@string/trackerStatus"
            android:textColor="#000000"
            android:textSize="@dimen/dialog_content"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/trackerStatusText"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight=".16666666666"

            android:text=" "
            android:textSize="@dimen/dialog_content"
            android:textColor="#000000"/>
    </LinearLayout>
        <android.support.v7.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            grid:columnCount="2"
            grid:rowCount="2"
            grid:orientation="horizontal">

            <ImageView
                android:id="@+id/buttonTrackerScheduleDownload"
                android:src="@drawable/download_button_state_list_drawable"

                grid:layout_columnWeight="1"
                grid:layout_rowWeight="1"
                grid:layout_gravity="center"

                android:layout_width="@dimen/tracker_icons"
                android:layout_height="@dimen/tracker_icons"/>
            <TextView
                android:id="@+id/textView2"

                grid:layout_columnWeight="1"
                grid:layout_rowWeight="1"
                grid:layout_gravity="center"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="@string/trackerScheduleDownload"
                android:textSize="@dimen/dialog_content"
                android:textColor="#000000"/>

            <ImageView
                android:id="@+id/buttonTrackerRefresh"
                android:src="@drawable/update_button_state_list_drawable"

                android:layout_width="@dimen/tracker_icons"
                android:layout_height="@dimen/tracker_icons"

                grid:layout_columnWeight="1"
                grid:layout_rowWeight="1"
                grid:layout_gravity="center"

                android:adjustViewBounds="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                grid:layout_columnWeight="1"
                grid:layout_rowWeight="1"
                grid:layout_gravity="center"

                android:text="@string/tracker_refresh"
                android:textSize="@dimen/dialog_content"
                android:textColor="#000000" />
        </android.support.v7.widget.GridLayout>
    </LinearLayout>
</RelativeLayout>